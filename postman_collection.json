{
  "info": {
    "name": "Node API Tutorial Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET all books",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/books",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "POST create book",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Dune\", \"author\": \"Frank Herbert\"}"
        },
        "url": {
          "raw": "http://localhost:3000/api/books",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "PATCH update book (replace <id>)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Dune Messiah\"}"
        },
        "url": {
          "raw": "http://localhost:3000/api/books/<id>",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "books",
            "<id>"
          ]
        }
      }
    },
    {
      "name": "DELETE book (replace <id>)",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/books/<id>",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "books",
            "<id>"
          ]
        }
      }
    }
  ]
}